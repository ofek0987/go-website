{
	"name": "go-website Dev",
	"dockerFile": "Dockerfile",
	"appPort": 8000,
	"extensions": [
		"golang.go",
		"davidanson.vscode-markdownlint",
		"shardulm94.trailing-spaces",
		"IBM.output-colorizer",
		"vscodevim.vim"
	],
	"settings": {
		"go.useLanguageServer": true
	},
	"postCreateCommand": "go mod download; git config --global --add safe.directory /workspaces/*",
	"runArgs": [
		"-u",
		"vscode",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	]
}